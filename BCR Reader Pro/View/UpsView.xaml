<Page x:Class="BCR_Reader_Pro.UpsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BCR_Reader_Pro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="UpaView" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Grid.Row="0" Orientation="Vertical">
                <Label Width="100" Content="IP"/>
                <TextBox Width="100" />
                </StackPanel>

                <StackPanel Grid.Row="0" Orientation="Vertical">
                    <Label Width="100" Content="PORT"/>
                    <TextBox Width="100" />
                </StackPanel>
            </StackPanel>

            <!-- Ups Status -->
            <StackPanel  Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="0,0,12,0"/>
                    </Style>
                </StackPanel.Resources>
                <Button Width="100" Height="100" Content="On"/>
                <Button  Width="100" Height="100" Content="Online"
                    Background="Gray"/>
                <Button Width="100" Height="100" Content="OnBattery"/>
                <Button Width="100" Height="100" Content="ByPass"/>
                <Button Width="100" Height="100" Content="Sleep Mode"/>
                <Button Width="100" Height="100" Content="ShutDown Mode"/>
                <Button Width="100" Height="100" Content="Overload"/>
            </StackPanel>
            <!-- Ups Value -->
            <StackPanel  Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="Margin" Value="0,0,12,0"/>
                    </Style>
                </StackPanel.Resources>
                <StackPanel Orientation="Vertical">
                    <Label Width="100" Content="SoC"/>
                    <TextBox Width="100" />
                </StackPanel>
                <StackPanel  Orientation="Vertical">
                    <Label Width="100" Content="Remain Time"/>
                    <TextBox Width="100" />
                </StackPanel>
                <StackPanel  Orientation="Vertical">
                    <Label Width="100" Content="Voltage"/>
                    <TextBox Width="100" />
                </StackPanel>
                <StackPanel  Orientation="Vertical">
                    <Label Width="100" Content="Temperature"/>
                    <TextBox Width="100" />
                </StackPanel>
                <StackPanel  Orientation="Vertical">
                    <Label Width="100" Content="Input Voltage"/>
                    <TextBox Width="100" />
                </StackPanel>
                <StackPanel  Orientation="Vertical">
                    <Label Width="100" Content="Load"/>
                    <TextBox Width="100" />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <Label Width="100" Content="Output Voltage"/>
                    <TextBox Width="100" />
                </StackPanel>

            </StackPanel>


        </Grid>
    </Grid>
</Page>
